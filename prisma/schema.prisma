datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Client {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  password  String   // hashed password
  email     String?  @unique
  tags      Tag[]
}

model Tag {
  id         Int      @id @default(autoincrement())
  slug       String   @unique
  name       String
  phone1     String
  phone2     String
  address    String
  clientId   Int
  client     Client   @relation(fields: [clientId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String // hashed password
  token    String @unique
}